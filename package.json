{
  "name": "artiverse-gallerria",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev --turbopack",
    "build": "prettier --check . && next build",
    "fbuild": "prettier --write . && next build",
    "build:static": "BUILD_TYPE=static npm run build",
    "build:standalone": "BUILD_TYPE=standalone npm run build && npm run build:server",
    "build:server": "tsc --project tsconfig.standalone.json",
    "start:next": "next start",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "prepare": "husky",
    "typeorm": "NODE_ENV=migration npx ts-node -r tsconfig-paths/register --project ./tsconfig.typeorm.json ./node_modules/.bin/typeorm",
    "schema:sync": "NODE_ENV=migration npx ts-node -r tsconfig-paths/register --project ./tsconfig.typeorm.json ./node_modules/.bin/typeorm schema:sync -d ./src/lib/database/data-source.ts",
    "migration:generate": "NODE_ENV=migration npx ts-node -r tsconfig-paths/register --project ./tsconfig.typeorm.json && ./node_modules/.bin/typeorm --tsconfig tsconfig.typeorm.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js  migration:generate ./src/lib/database/migrations -d ./src/lib/database/data-source.ts",
    "migration:run": "NODE_ENV=migration npx tsc --project ./tsconfig.typeorm.json && ./node_modules/typeorm/cli.js migration:run -d ./dist/lib/database/data-source-migration.js",
    "migration:seed": "NODE_ENV=migration npx tsc --project ./tsconfig.typeorm.json && ./node_modules/typeorm/cli.js migration:run -d ./dist/lib/database/data-source-migration-seed.js",
    "migration:create": "NODE_ENV=migration npx ts-node -r tsconfig-paths/register --project ./tsconfig.typeorm.json ./node_modules/.bin/typeorm migration:create ./src/lib/database/migrations -t",
    "test": "jest"
  },
  "packageManager": "npm@10.5.2",
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom",
    "next": "$next"
  },
  "dependencies": {
    "@preact/signals-core": "^1.8.0",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tanstack/react-query": "^5.69.0",
    "@types/qrcode": "^1.5.5",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.4.7",
    "lucide-react": "^0.476.0",
    "next": "^15.3.0-canary.24",
    "next-auth": "^5.0.0-beta.25",
    "next-themes": "^0.4.4",
    "nodemailer": "^6.10.0",
    "pg": "^8.13.3",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "recharts": "^2.15.1",
    "reflect-metadata": "^0.2.2",
    "shadcn": "^2.4.0-canary.10",
    "simplex-noise": "^4.0.3",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "typeorm": "^0.3.21",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^9.6.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.174.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "postcss": "^8",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
