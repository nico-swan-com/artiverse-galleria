{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/lib/database/data-source*.ts",
    "./src/lib/database/migrations/*.ts",
    "./src/lib/database/seeding/*.ts",
    "./src/lib/**/*.entity.ts",
    "./src/types/*.ts"
  ],
  "exclude": ["node_modules"]
}
